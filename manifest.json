{
  "manifest_version": 3,
  "name": "Rỉm phô",
  "version": "1.1",
  "description": "Tự bắt link m3u8 để xem đỡ quảng cáo. Có hỗ trợ lệnh mở IINA trên terminal.",
  "permissions": ["webRequest", "storage","declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}